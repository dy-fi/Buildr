<div class="form">
    <form class="inner-form" method="POST" action="/login">
        <h1>Log in</h1>
        <label class="form-label" for="username">Username</label>
        <input class="form-input" type='text' id='username' name='username' placeholder="Username" required autofocus>
        <label class="form-label" for="password">Password</label>
        <input class="form-input" type="password" id="password" class="form-control" name="password" placeholder="Password" required>
        <a class="form-anker" href="/sign-up">Don't have an account?</a>
        <button class="form-btn" type="submit">Log in</button>
    </form>
</div>
